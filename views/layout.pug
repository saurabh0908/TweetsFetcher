html
  head
    title TweetsFetcher
    block scripts
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
      style
        include ../app.css
  body
    a(href='/', class='title')
      h1  Twitter Search
    #root.container
      .row
        div(class=['col-md-8', 'col-md-offset-2', 'col-lg-8', 'col-lg-offset-2'])
          form(method='GET', action='/search')
            .input-group
              input#search(type='text', class='form-control', placeholder='Search for....', name='q', value=searchTitle)
              span.input-group-btn
                button#searchButton(type='submit', class='btn btn-default', onClick="showSpinner()" ) Search
            block content
              h1.name='Saurabh Shrivastava' 
            if messages.length === 0
              div#spinner.spinner  
                div.double-bounce1
                div.double-bounce2
      
    script
      include ../client.js
                    
